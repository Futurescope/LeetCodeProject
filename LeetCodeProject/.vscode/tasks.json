{
    "version": "2.0.0",
    "tasks": [
        {
            // build task
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}//*.cpp",
                // "${workspaceFolder}/Solutions/*.cpp",
                "-o",
                "${workspaceFolder}/build/Debug/main.o",
                "-g",
                "-Wall",
                "-std=c++17"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type":"shell",
            "dependsOn":"build",
            "command": "${workspaceFolder}/build/Debug/main.o",
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}